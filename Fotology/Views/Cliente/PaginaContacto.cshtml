@{
    Layout = null; // Esto evita que utilices un diseño predeterminado si lo tienes configurado
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Formulario de Contacto</title>
    <link rel="stylesheet" href="~/css/Cliente css/stylecontacto.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/646ac4fad6.js" crossorigin="anonymous"></script>
</head>
<body>
    <script src="~/js/dropdown.js"></script>

    <header class="header">
        <div class="logo">
            <img src="../Recursos/LOGOA.png" alt="Logo" />
        </div>
        <nav>
            <ul class="linksnav">
                <li><a href="@Url.Action("PaginaCliente", "Cliente")">Inicio</a></li>
                <li><a href="@Url.Action("Fotografos", "Cliente")">Fotografos</a></li>
                <li><a href="@Url.Action("PaginaCategorias", "Cliente")">Categorias</a></li>
                <li><a href="@Url.Action("PaginaAyuda", "Cliente")">Ayuda</a></li>
                <li><a href="@Url.Action("PaginaContacto", "Cliente")">Contacto</a></li>
                <li class="dropdown">
                    <a href="#">
                        <i class="fas fa-user"></i>
                    </a>
                    <div class="dropdown-content">
                        <a href="@Url.Action("PerfilCliente", "Cliente")">Perfil</a>
                        <a href="@Url.Action("Configuraciones", "Cliente")">Configuración</a>
                        <a href="@Url.Action("Index", "Home")">Cerrar Sesión</a>
                    </div>
                </li>
            </ul>
        </nav>
        <div class="nombre-cliente">Bienvenido, Erik Chaves</div>
    </header>

    <div class="formulario">
        <h2>Contacto</h2>
        <form action="enviar.php" method="post">
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" name="nombre" required />

            <label for="email">Correo Electrónico:</label>
            <input type="email" id="email" name="email" required />

            <label for="mensaje">Mensaje:</label>
            <textarea id="mensaje" name="mensaje" required></textarea>

            <input type="submit" value="Enviar" />
        </form>
    </div>
</body>
</html>

