@{
    Layout = null; // Esto evita que utilices un diseño predeterminado si lo tienes configurado
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Configuración del Usuario</title>
    <link rel="stylesheet" href="~/css/Cliente css/Fotografos.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/646ac4fad6.js" crossorigin="anonymous"></script>
        <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #f4f4f4;
                margin: 0;
                padding: 0;
            }

            .container {
                max-width: 800px;
                margin: 0 auto;
                padding: 20px;
            }

            h2 {
                margin-top: 0;
            }

            form {
                background-color: #fff;
                padding: 20px;
                border-radius: 5px;
                box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            }

            label {
                display: block;
                margin-bottom: 10px;
                font-weight: bold;
            }

            input[type="file"] {
                margin-bottom: 10px;
            }

            input[type="text"],
            input[type="email"],
            select {
                width: 100%;
                padding: 8px;
                margin-bottom: 10px;
                border: 1px solid #ccc;
                border-radius: 3px;
                box-sizing: border-box;
            }

            button {
                padding: 10px 20px;
                background-color: #007bff;
                color: #fff;
                border: none;
                border-radius: 3px;
                cursor: pointer;
            }

                button:hover {
                    background-color: #0056b3;
                }
        </style>
</head>
<body>
    <script src="~/js/dropdown.js"></script>

    <header class="header">
        <div class="logo">
            <img src="../Recursos/LOGOA.png" alt="Logo" />
        </div>
        <nav>
            <ul class="linksnav">
                <li><a href="@Url.Action("PaginaCliente", "Cliente")">Inicio</a></li>
                <li><a href="@Url.Action("Fotografos", "Cliente")">Fotografos</a></li>
                <li><a href="@Url.Action("PaginaCategorias", "Cliente")">Categorias</a></li>
                <li><a href="@Url.Action("PaginaAyuda", "Cliente")">Ayuda</a></li>
                <li><a href="@Url.Action("PaginaContacto", "Cliente")">Contacto</a></li>
                <li class="dropdown">
                    <a href="#">
                        <i class="fas fa-user"></i>
                    </a>
                    <div class="dropdown-content">
                        <a href="@Url.Action("PerfilCliente", "Cliente")">Perfil</a>
                        <a href="@Url.Action("Configuraciones", "Cliente")">Configuración</a>
                        <a href="@Url.Action("Index", "Cliente")">Cerrar sesión</a>
                    </div>
                </li>
            </ul>
        </nav>
        <div class="nombre-cliente">Bienvenido, Erik Chaves</div>
    </header>

    <div class="container">
        <h1>Configuración del Usuario</h1><p></p>
        <form id="profileForm" action="@Url.Action("ActualizarPerfil", "Cliente")" method="post" enctype="multipart/form-data">
            <label for="profilePicture">Cambiar Foto de Perfil:</label>
            <input type="file" id="profilePicture" name="profilePicture">
            <hr>

            <label for="username">Nombre de usuario:</label>
            <input type="text" id="username" name="username" placeholder="Ingrese su nombre de usuario">
            <p></p>
            <label for="email">Correo electrónico:</label>
            <input type="email" id="email" name="email" placeholder="Ingrese su correo electrónico">
            <p></p>
            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="password" placeholder="Ingrese su nueva contraseña">
            <p></p>
            <label for="confirmPassword">Confirmar contraseña:</label>
            <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirme su contraseña">
            <p></p>
            <hr>

            <label for="birthdate">Fecha de Nacimiento:</label>
            <input type="date" id="birthdate" name="birthdate">
            <p></p>
            <label for="gender">Género:</label>
            <select id="gender" name="gender">
                <option value="masculino">Masculino</option>
                <option value="femenino">Femenino</option>
                <option value="otro">Otro</option>
            </select>
            <p></p>
            <label for="bio">Biografía:</label><p></p>
            <textarea id="bio" name="bio" placeholder="Escriba algo sobre usted..."></textarea><p></p><p></p><p></p>

            <button type="submit">Guardar Cambios</button>
        </form>
    </div>

</body>
</html>

